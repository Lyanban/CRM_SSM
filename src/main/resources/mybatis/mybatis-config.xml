<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
  <!-- 设置日志 -->
  <settings>
    <setting name="logImpl" value="STDOUT_LOGGING"/>
  </settings>

  <typeAliases>
    <package name="com.lyanba.crm.settings.domain"/>
    <package name="com.lyanba.crm.workbench.domain"/>
  </typeAliases>

  <mappers>
    <!-- 映射文件路径 -->
    <package name="com.lyanba.crm.settings.dao"/>
    <package name="com.lyanba.crm.workbench.dao"/>
  </mappers>
</configuration>